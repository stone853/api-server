<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sk.web.mapper.MembershipMapper">
  <resultMap id="BaseResultMap" type="com.sk.web.model.Membership">
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
    <result column="sex" jdbcType="INTEGER" property="sex" />
    <result column="level" jdbcType="VARCHAR" property="level" />
    <result column="balance" jdbcType="DECIMAL" property="balance" />
    <result column="count" jdbcType="INTEGER" property="count" />
    <result column="open_id" jdbcType="VARCHAR" property="openId" />
    <result column="is_admin" jdbcType="SMALLINT" property="isAdmin" />
  </resultMap>


  <select id="selectPage"  resultType="java.util.Map" parameterType="com.sk.web.model.Membership">
    select
    t.id,t.name,t.phone,t.sex,t.level,t.balance,t.count
    from tcrm_membership t where 1=1
    <if test="id != null and id != ''">
      and id=#{id}
    </if>
    <if test="name != null and name != ''">
      and name like '%${name}%'
    </if>
    <if test="phone != null and phone != ''">
      and phone=#{phone}
    </if>
  </select>
</mapper>